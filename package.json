{
	"author": {
		"name": "Baptiste Pillot",
		"email": "baptiste@pillot.fr"
	},
	"description": "A Node.js library to determine the root directory of your project",
	"devDependencies": {
		"@types/node": "^22.9",
		"typescript": "~5.8"
	},
	"engines": {
		"node": ">=18"
	},
	"exports": {
		"import": "./esm/app-dir.js",
		"require": "./cjs/app-dir.js"
	},
	"files": [
		"LICENSE",
		"README.md",
		"*/*.d.ts",
		"*/*.js"
	],
	"homepage": "https://it.rocks",
	"keywords": [
		"app",
		"application",
		"backend",
		"dir",
		"directory",
		"it.rocks",
		"node",
		"path",
		"root"
	],
	"license": "ISC",
	"name": "@itrocks/app-dir",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/itrocks-ts/app-dir.git"
	},
	"scripts": {
		"build": "npm run build:cjs && npm run build:esm",
		"build:cjs": "tsc -p cjs/tsconfig.json",
		"build:esm": "tsc -p esm/tsconfig.json"
	},
	"types": "./esm/app-dir.d.ts",
	"version": "0.0.24"
}
