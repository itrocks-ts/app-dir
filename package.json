{
	"author": {
		"name": "Baptiste Pillot",
		"email": "baptiste@pillot.fr"
	},
	"description": "A Node.js library to determine the root directory of your project",
	"devDependencies": {
		"@types/node": "^22.9",
		"typescript": "~5.6"
	},
	"engines": {
		"node": ">=18"
	},
	"exports": {
		"import": "./app-dir.js",
		"require": "./cjs/app-dir.js"
	},
	"files": [
		"LICENSE",
		"README.md",
		"cjs",
		"*.d.ts",
		"*.js"
	],
	"keywords": [
		"app",
		"application",
		"dir",
		"directory",
		"it.rocks",
		"node",
		"path",
		"root"
	],
	"license": "ISC",
	"name": "@itrocks/app-dir",
	"repository": "https://github.com/itrocks-ts/app-dir",
	"scripts": {
		"build": "npm run build:cjs && npm run build:esm",
		"build:cjs": "tsc -p tsconfig.cjs.json",
		"build:esm": "tsc -p tsconfig.esm.json"
	},
	"types": "./app-dir.ts",
	"version": "0.0.5"
}
